# Environment Configuration Template
# Copy this file to config.env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Backend and Frontend URLs (for CORS and deployment)
# For development:
BACKEND_URL=http://localhost:5001
FRONTEND_ORIGIN=http://localhost:3001

# For production (Vercel deployment):
# BACKEND_URL=https://your-backend-domain.vercel.app
# FRONTEND_ORIGIN=https://your-frontend-domain.vercel.app

# Additional frontend origins (optional, for multiple domains)
FRONTEND_ORIGIN_ALT1=
FRONTEND_ORIGIN_ALT2=
FRONTEND_ORIGIN_ALT3=

# Email Configuration (if applicable)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_here

# Twilio SMS Configuration
# Sign up at https://www.twilio.com/try-twilio to get these credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Other API Keys (add as needed)
# API_KEY=your_api_key_here
